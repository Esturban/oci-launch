# OCI Configuration Environment Variables
# Copy this file to .env and fill in your actual values
# The .env file will be ignored by git for security

# ================================
# OCI AUTHENTICATION
# ================================
# Your OCI User OCID (from OCI Console -> Identity -> Users -> Your User)
OCI_USER_OCID=ocid1.user.oc1..aaaaaaaa...

# Your OCI Tenancy OCID (from OCI Console -> Tenancy Information)
OCI_TENANCY_OCID=ocid1.tenancy.oc1..aaaaaaaa...

# Your OCI Region (e.g., ca-toronto-1, us-ashburn-1, eu-frankfurt-1)
OCI_REGION=ca-toronto-1

# Path to your OCI API private key (usually in ~/.oci/)
OCI_PRIVATE_KEY_PATH=~/.oci/oci_api_key.pem

# Your OCI API Key Fingerprint (from OCI Console -> User Settings -> API Keys)
OCI_KEY_FINGERPRINT=aa:bb:cc:dd:ee:ff:00:11:22:33:44:55:66:77:88:99

# ================================
# DEPLOYMENT CONFIGURATION
# ================================
# Your OCI Compartment OCID (where to create the instance)
OCI_COMPARTMENT_ID=ocid1.compartment.oc1..aaaaaaaa...

# Your OCI Subnet OCID (where to place the instance)
OCI_SUBNET_ID=ocid1.subnet.oc1.ca-toronto-1.aaaaaaaa...

# SSH Public Key Path (usually ~/.ssh/id_rsa.pub or ~/.ssh/id_ed25519.pub)
SSH_PUBLIC_KEY_PATH=~/.ssh/id_rsa.pub

# ================================
# A1.FLEX CONFIGURATION
# ================================
# Instance name prefix (timestamp will be added)
INSTANCE_NAME_PREFIX=a1-flex-instance

# Availability Domain (will try all if not specified)
# Example: mUFn:CA-TORONTO-1-AD-1
OCI_AVAILABILITY_DOMAIN=

# ================================
# RETRY CONFIGURATION
# ================================
# Minimum wait time between retries (seconds)
MIN_RETRY_DELAY=60

# Maximum wait time between retries (seconds)  
MAX_RETRY_DELAY=300

# ================================
# NOTIFICATION SETTINGS
# ================================
# Enable desktop notifications (true/false)
ENABLE_NOTIFICATIONS=true

# Enable sound notifications (true/false)
ENABLE_SOUNDS=true

# Enable voice announcements (true/false)
ENABLE_VOICE=true 